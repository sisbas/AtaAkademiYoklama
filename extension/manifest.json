{
  "manifest_version": 3,
  "name": "Ata Akademi Yoklama Helper",
  "description": "Stabil messaging helpers for Ata Akademi Yoklama portal.",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Ata Akademi Yoklama Helper"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
